# Environment variables for development
HOST=0.0.0.0
PORT=8000
RELOAD=true
TOOLS_DIR=./tools
DEBUG=true
MARKITDOWN_ENABLE_PLUGINS=true

# Tools configuration - Control which tools are enabled
ENABLED_TOOLS=file_converter,url_fetcher,text_processor

# Testing configuration - Control if tests are enabled
ENABLE_TESTS=false

# You can enable only specific tools by changing ENABLED_TOOLS:
# ENABLED_TOOLS=file_converter           # Only file conversion
# ENABLED_TOOLS=url_fetcher              # Only URL fetching
# ENABLED_TOOLS=text_processor           # Only text processing
# ENABLED_TOOLS=file_converter,url_fetcher  # File conversion and URL fetching

# Testing examples:
# ENABLE_TESTS=true                      # Enable test endpoints for development

# MCP Settings
MCP_SERVER_NAME=fastapi_mcp_template
MCP_VERSION=1.0.0

# OpenAI Settings for MarkItDown (optional)
# Enable LLM features for better image descriptions and processing
FTMD_MARKITDOWN_ENABLE_LLM=false
FTMD_OPENAI_API_KEY=your_openai_api_key_here
FTMD_OPENAI_MODEL=gpt-4o
# FTMD_OPENAI_BASE_URL=https://your-custom-endpoint.com/v1  # For Azure OpenAI or custom endpoints

# Examples:
# FTMD_MARKITDOWN_ENABLE_LLM=true
# FTMD_OPENAI_API_KEY=sk-proj-...
# FTMD_OPENAI_MODEL=gpt-4o-mini  # or gpt-4o, gpt-4-turbo, etc.

# For Azure OpenAI:
# FTMD_OPENAI_BASE_URL=https://your-resource.openai.azure.com/
# FTMD_OPENAI_API_KEY=your_azure_api_key

# Optional: Add Azure Document Intelligence settings (alternative to OpenAI)
# AZURE_DOC_INTEL_ENDPOINT=your_endpoint_here
# AZURE_DOC_INTEL_KEY=your_key_here
